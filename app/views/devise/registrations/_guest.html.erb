<%= form.fields_for :guest do |g| %>

  <div class="field">
    <%= g.label :住所 %><br />
    <%= g.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <%= g.label :電話番号 %><br />
     <%= g.text_area :phone_number, autofocus: true, class: "phone_text" %>
  </div>

  <div class="field">
    <%= g.label :出身国 %><br />
    <%= g.text_field :country, autofocus: true %>
  </div>

  <div class="field">
    <%= g.label :誕生日 %><br />
    <%= g.date_field :birthday, autofocus: true, class: "phone_text" %>
  </div>

  <div class="field">
    <%#= g.label :image %><br />
    <%#= g.text_field :image, autofocus: true %>
  </div>

  <div class="field">
    <%= g.label :性別 %><br />
    <%= g.select :gender, Guest.genders.keys, {prompt: "選択"} %>
  </div>
<% end %>

