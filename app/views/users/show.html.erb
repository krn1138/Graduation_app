<div class="profile">
<h3><%= current_user.name %>さんのプロフィール</h3>
<br>
<%= image_tag @user.image.url, class: "icon_image" %>
<br>
<br>
<p><i class="fa fa-user-circle-o" aria-hidden="true"></i>名前 : <%= @user.name %></p>
<p><i class="fa fa-envelope-o" aria-hidden="true"></i>メールアドレス : <%= @user.email %></p>
<% if @user.role == "guest" %>
<%# binding.irb %>
  <%= render 'users/guest', guest: @guest %>
<% else %>
  <%= render 'users/host', host: @host %>
<% end %>


<%= link_to 'edit', edit_user_registration_path	%>
<%= link_to 'Back', root_path %>

</div>
